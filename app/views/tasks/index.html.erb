<% if logged_in? %>

<p>ログイン完了ユーザ: 
<%= current_user.name %>
</p>

<!--ユーザータスク一覧のtable表示-->
<p>タスク一覧</p>

<% if @tasks.any? %>
  
  
   <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タスク名</th>
        <th>状況</th>
      </tr>
    </thead>
    <tbody>
        
<% @tasks.each do |task| %>

  <tr>
          <td>
<%= link_to task.id, task %>
</td>
          <td>
<%= task.content %>
</td>
          <td>
<%= task.status %>
</td>
        </tr>
<% end %>        
    
      </tbody>
  </table>
  <div>
<%= paginate @tasks %>
  </div>
  
<% end %>

<%= link_to(new_task_path) do %>
<span class="btn btn-primary">新規タスクの登録</span>
<% end %>

<% else %>

<div class="center jumbotron">
  <div class="text-center">
    <h1>Welcome to the Tasklist</h1>
    
    <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    
  </div>
</div>



<% end %>